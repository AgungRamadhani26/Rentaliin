<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/payment"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/payment_desc"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/eps"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/giropay"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/metodepembayaranlainnya"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/title_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/title_card_number"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RelativeLayout
        android:id="@+id/layout_card_number"
        android:layout_width="285dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_card_number"
        app:layout_constraintTop_toBottomOf="@+id/title_card_number">

        <TextView
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/card_number"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_expiry"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/title_expiry"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/layout_card_number"
        app:layout_constraintTop_toBottomOf="@+id/layout_card_number" />

    <RelativeLayout
        android:id="@+id/layout_expiry"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_expiry"
        app:layout_constraintTop_toBottomOf="@+id/title_expiry">

        <TextView
            android:id="@+id/expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/expiry"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_cvc"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:text="@string/title_cvc"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/title_expiry"
        app:layout_constraintTop_toBottomOf="@+id/layout_card_number" />

    <RelativeLayout
        android:id="@+id/layout_cvc"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_cvc"
        app:layout_constraintTop_toBottomOf="@+id/title_cvc">

        <TextView
            android:id="@+id/cvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/expiry"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_country"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/title_country"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/layout_expiry"
        app:layout_constraintTop_toBottomOf="@+id/layout_expiry" />

    <RelativeLayout
        android:id="@+id/layout_country"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_country"
        app:layout_constraintTop_toBottomOf="@+id/title_country">

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/country"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_postal_code"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:text="@string/title_postal_code"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/title_country"
        app:layout_constraintTop_toBottomOf="@+id/layout_cvc" />

    <RelativeLayout
        android:id="@+id/layout_postal_code"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_postal_code"
        app:layout_constraintTop_toBottomOf="@+id/title_postal_code">

        <TextView
            android:id="@+id/postal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/postal_code"
            android:textSize="12sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_payment"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/confirm_pengguna"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_country"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>