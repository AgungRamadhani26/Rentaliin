<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePengguna">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/bacground_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrow_back_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintEnd_toStartOf="@+id/tv_profile"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/share_profile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/baseline_share_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toEndOf="@+id/tv_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/profile_pengguna"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_fotoprofil_pengguna"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/fotoprofil_pengguna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile" />

    <TextView
        android:id="@+id/title_namapengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/title_namapengguna"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <RelativeLayout
        android:id="@+id/layout_namapengguna"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_namapengguna"
        app:layout_constraintTop_toBottomOf="@+id/title_namapengguna">

        <TextView
            android:id="@+id/nama_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:text="@string/nama_pengguna"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_alamatpengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/title_alamatpengguna"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/layout_namapengguna"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/layout_namapengguna"
        app:layout_constraintTop_toBottomOf="@+id/layout_namapengguna" />

    <RelativeLayout
        android:id="@+id/layout_alamatpengguna"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="@+id/layout_namapengguna"
        app:layout_constraintStart_toStartOf="@+id/title_alamatpengguna"
        app:layout_constraintTop_toBottomOf="@+id/title_alamatpengguna">

        <TextView
            android:id="@+id/alamat_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/alamat_pengguna"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_notelepon_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/title_notelepon_pengguna"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/layout_alamatpengguna"
        app:layout_constraintTop_toBottomOf="@+id/layout_alamatpengguna" />

    <RelativeLayout
        android:id="@+id/layout_notelepon_pengguna"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="@+id/layout_alamatpengguna"
        app:layout_constraintStart_toStartOf="@+id/title_notelepon_pengguna"
        app:layout_constraintTop_toBottomOf="@+id/title_notelepon_pengguna">

        <TextView
            android:id="@+id/notelepon_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:text="@string/notelepon_pengguna"
            android:textSize="12sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_nik_pengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/title_nik_pengguna"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/layout_notelepon_pengguna"
        app:layout_constraintTop_toBottomOf="@+id/layout_notelepon_pengguna" />

    <RelativeLayout
        android:id="@+id/layout_nik_pengguna"
        android:layout_width="355dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_textview"
        app:layout_constraintEnd_toEndOf="@+id/layout_notelepon_pengguna"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title_nik_pengguna"
        app:layout_constraintTop_toBottomOf="@+id/title_nik_pengguna">

        <TextView
            android:id="@+id/nik_pengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="13dp"
            android:text="@string/nik_pengguna"
            android:textSize="12sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm_pengguna"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/confirm_pengguna"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_nik_pengguna"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>